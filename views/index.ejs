<script>

function isWeiXin(){ 
  var ua = window.navigator.userAgent.toLowerCase(); 
  if(ua.match(/MicroMessenger/i) == 'micromessenger'){ 
    return true; 
  }else{ 
    return false; 
  } 
} 
function removeLoading(){
  var loadingMp3 = document.getElementById('loading-mp3');
  var loading = document.getElementById('loading');
  loading.remove();
  loadingMp3.pause();
}
  if(isWeiXin()){
    document.addEventListener("WeixinJSBridgeReady", function () {
      
      document.getElementById('loading-mp3').play();
      document.getElementById('video').play()
      document.getElementById('video').pause();

      $('.countdown').each(function()
      {
          $(this).data('from',0);
          $(this).data('to',100);
          $(this).countTo({
            onComplete:function(){
              $('.countdown').remove();
              $('#loading').append('<div class="button"></button>');
              var video = document.getElementById('video');
              video.onended = function(){
                $('video').remove();
                $('#gif').show();
                $('#dowebok').fullpage();
              }
              $('#loading').click(function(){
                removeLoading();
                video.play();
              })
            }
          });
      });

      
    }, false);
    
  }else{
    document.getElementById('loading-mp3').play();
    document.getElementById('video').play()
    document.getElementById('video').pause();

    $('.countdown').each(function()
    {
        $(this).data('from',0);
        $(this).data('to',100);
        $(this).countTo({
          onComplete:function(){
            $('.countdown').remove();
            $('#loading').append('<div class="button"></button>');
            var video = document.getElementById('video');
            video.onended = function(){
              $('video').remove();
              $('#gif').show();
              $('#dowebok').fullpage();
            }
            $('#loading').click(function(){
              removeLoading();
              video.play();
            })
          }
        });
    });
  }
